{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 目前檔案",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "C:\\anaconda3\\python.exe"
        },
        {
            "name": "Python: 互動視窗",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "justMyCode": true,
            "python": "C:\\anaconda3\\python.exe"
        }
    ]
}